<div class="row">
  <div class="col s12 m8 offset-m2">
    {{#md-card title=title}}
      {{#md-card-content}}
        <form {{action 'submitResponse' on="submit"}} class="cm-form">
          <div class="input-field">
            {{md-textarea value=model.companyName label='Be as specific as you can' required=true}}
          </div>

          <div class="input-field right-align">
            {{md-btn-submit icon='mdi-content-send'
              buttonType='large'
              iconPosition='right'
              class='pink accent-1 full-width'
              text='Submit response'}}       
          </div>
        </form>
      {{/md-card-content}}
    {{/md-card}}
  </div>
</div>